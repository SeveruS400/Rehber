<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Ayarlar
    </button>
    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
        <li>
            <a class="dropdown-item" asp-area="Admin" asp-controller="Settings" asp-action="Create" asp-route-returnUrl="@Context.Request.Path">
                Yeni Kullanıcı Ekle
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#reportModal">
                Oturum Zamanı
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#confirmResetModal">
                Yeni Görüşme Başlat
            </a>
        </li>
        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Kullanıcı Görünümü</a></li>
        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
    </ul>
</div>

<!-- Modal -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-area="Admin" asp-controller="Settings" asp-action="Edit">
                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                <div class="modal-body">
                
                        <div class="form-group">
                            <label for="sessionTimeout">Session Timeout (1 - 10)</label>
                            <select class="form-control" id="sessionTimeout" name="sessionTimeout">
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reset ConnStatus Confirmation Modal -->
<div class="modal fade" id="confirmResetModal" tabindex="-1" aria-labelledby="confirmResetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmResetModalLabel">Onay Gerekli</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tüm bağlantı durumlarını sıfırlamak istediğinize emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <!-- Şifre modalını tetikle -->
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#passwordModal" data-bs-dismiss="modal">
                    Evet, Sıfırla
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Password Input Modal -->
<div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="passwordModalLabel">Şifre Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-area="Admin" asp-controller="Settings" asp-action="VerifyPasswordAndReset">
                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                <div class="modal-body">
                    <div class="form-group">
                        <label for="passwordInput">Lütfen şifrenizi giriniz:</label>
                        <input type="password" class="form-control" id="passwordInput" name="Password" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-danger">Onayla ve Sıfırla</button>
                </div>
            </form>
        </div>
    </div>
</div>

